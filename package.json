{
  "scripts": {
    "clean": "rm -rf bin/ && rm -rf app/www/",
    "dist": "yarn clean && webpack --mode=production && cp -r bin/ app/www",
    "start": "yarn start:dev",
    "start:dev": "NODE_ENV=development webpack-dev-server --inline --hot --host 0.0.0.0 --content-base bin/ --history-api-fallback",
    "start:ios": "cd app && cordova run ios --buildFlag='-UseModernBuildSystem=0'",
    "start:android": "cd app && cordova run android",
    "sprites": "node build/create-spritesheet public/img public/",
    "run:ios": "yarn dist && yarn start:ios; osascript xc-run.applescript"
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.0",
    "file-loader": "^3.0.1",
    "glob": "^7.1.3",
    "hibar": "^0.4.0",
    "howler": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.15.2",
    "raw-loader": "^1.0.0",
    "spritesmith": "^3.3.1",
    "svgexport": "^0.3.2",
    "twgl.js": "^4.5.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
